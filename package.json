{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"{app,components}/**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc",
    "format:check": "npx prettier --check \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "npx prettier --write \"**/*.{js,jsx,ts,tsx,json}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run typecheck && lint-staged"
    }
  },
  "lint-staged": {
    "{app,components}/**/*.{js,jsx,ts,tsx}": "eslint",
    "**/*.{js,jsx,ts,tsx,json}": "prettier --write"
  },
  "dependencies": {
    "@types/node": "20.1.7",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "eslint-config-next": "13.4.2",
    "next": "13.4.2",
    "postcss": "8.4.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-next": "^0.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8"
  }
}
